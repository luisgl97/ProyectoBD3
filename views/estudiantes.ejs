<%- include("../template/cabecera",{tituloWeb: 'Pagina de inicio '}) %>


    <div class="container">

        <div>CRUD MongoDB</div>
        <a href="/estudiantes/crear" class="btn btn-success btn-block my-4">
            
                Crear nuevo Estudiante
        
        </a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Universidad</th>
                    <th scope="col">Codigo</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Acci√≥n</th>

                </tr>
            </thead>
            <tbody>
                <% if(arrayEstudiantes.length >0){ %>
                    <% arrayEstudiantes.forEach(estudiante =>{ %>
                        <tr>
                            <th scope="row">
                                <%= estudiante.id %>
                            </th>
                            <td>
                                <%= estudiante.nombre %>
                            </td>
                            <td>
                                <%= estudiante.universidad %>
                            </td>
                            <td>
                                <%= estudiante.codigo %>
                            </td>
                            <td>
                                <%= estudiante.sexo%>
                            </td>

                            <td>
                                <a href="estudiantes/<%= estudiante.id %>" class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %>

            </tbody>
        </table>


    </div>
    <%- include("../template/footer") %>